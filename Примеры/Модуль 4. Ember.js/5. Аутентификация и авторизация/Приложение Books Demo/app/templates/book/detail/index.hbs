  <div class="slide-out-content">
    <div class="title">
      <h3>{{model.reviews.length}} Reviews</h3>
      {{#if session.isAuthenticated}}
        <div class="actions">
          {{#link-to "book.detail.new-review" model.id class="btn-secondary btn-add btn"}}Add a review{{/link-to}}
        </div>
      {{/if}}
    </div>

    <ul class="review-list">
      {{#each model.reviews as |review|}}
        <li class="review">
          <p>{{review.body}}</p>
          <div class="details">
            <p class="review-user">{{review.user}}</p>
            <p class="review-ime">{{moment-from-now review.createdAt}}</p>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
