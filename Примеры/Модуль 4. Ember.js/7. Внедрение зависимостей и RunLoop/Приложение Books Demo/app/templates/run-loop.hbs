<h1>This is our Run Loop route</h1>
{{#if shouldShowComponent}}
  {{run-loop-component}}
{{else}}
  Nothing is shown
{{/if}}

<button onclick={{action "clickAction"}}>Click to toggle</button>

<div class="panel-content">
  <h3 class="panel-title">Authors</h3>

  <ul class="collection">
    {{#each model as |author|}}
      {{author-item firstName=author.firstName lastName=author.lastName idAuthor=author.id tagName='li'}}
    {{/each}}
  </ul>
</div>

<button onclick={{action "cancelPolling"}}>Click to cancel polling</button>
